<h1>Listing orders</h1>

<table>
  <tr>
    <th>Order #</th>
    <th>Date</th>
    <th>Shipping</th>
    <th>Revenue</th>
    <th></th>
    <th></th>
    <th></th>        
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.order %></td>
    <td><%= order.date %></td>
    <td><%= order.shipping %></td>
    <td><%= order.revenue %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

