<%= form_tag('/orders/index') do %>

  <p>
    <%= label_tag :start_month %>
    <%= select_month(Date.today, :field_name => :start_month) %>
 
    <%= label_tag :start_year %>
    <%= select_year(Date.today, :field_name => :start_year)%>
  </p>
  <p>
    <%= label_tag :end_month %>   
    <%= select_month(Date.today, :field_name => :end_month) %>
    
    <%= label_tag :end_year %>
    <%= select_year(Date.today, :field_name => :end_year) %>
  </p>

  <%= submit_tag :Search %>
  
<% end %>


<br />
<b>Search Results</b>

<table>
  <tr>
    <th>Order #</th>
    <th>Date</th>
    <th>Shipping</th>
    <th>Revenue</th>
  </tr>
  <% @order_list.each do |order| %>
  <tr>
    <td><%= order.order %></td>
    <td><%= order.date %></td>
    <td><%= order.shipping? ? "Yes" : "No" %></td>
    <td><%= order.revenue %></td>
  </tr>
  <% end %>
</table>


<br />
<b>All Results</b>

<table>  
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.order %></td>
    <td><%= order.date %></td>
    <td style="text-align:center"><%= order.shipping? ? "Yes" : "No" %></td>
    <td><%= number_to_currency(order.revenue) %></td>
 		<td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path %>

