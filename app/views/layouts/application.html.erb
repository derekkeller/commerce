<!DOCTYPE html>
<html>
<head>
	
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js" type="text/javascript"></script>
	<script src="/js/highcharts.js" type="text/javascript">
	</script>

	<script>
		$(function() {
			new Highcharts.Chart({
				chart: {
					renderTo: "orders_chart"
				},
				title: {
					text: "Orders by Day"
				},
				xAxis: {
					type: "datetime",
				},
				yAxis: {
					title: {
						text: "Dollars"
					}
				},
				tootip: {
					formatter: function() {
						return Highcharts.dateFormat("%B %e, %Y", this.x) + ': ' + "$" + Highcharts.numberFormat(this.y, 2);
					}
				},
				series: [
	      <% { "Download" => Order.download, "Shipping" => Order.shipping }.each do |name, orders| %>
	      {
	        name: "<%= name %>",
	        pointInterval: <%= 1.day * 1000 %>,
	        pointStart: <%= 3.weeks.ago.to_i * 1000 %>,
	        data: <%= orders_chart_series(orders, 3.weeks.ago) %>
	      },
	      <% end %>
				]
			});
		});
	</script>

	<script>
	var chart1; // globally available
	$(document).ready(function() {
	      chart1 = new Highcharts.Chart({
	         chart: {
	            renderTo: 'chart-container-1',
	            defaultSeriesType: 'bar'
	         },
	         title: {
	            text: 'Fruit Consumption'
	         },
	         xAxis: {
	            categories: ['Apples', 'Bananas', 'Oranges']
	         },
	         yAxis: {
	            title: {
	               text: 'Fruit eaten'
	            }
	         },
	         series: [{
	            name: 'Jane',
	            data: [1, 0, 4]
	         }, {
	            name: 'John',
	            data: [5, 7, 3]
	         }]
	      });
	   });
	</script>

  <title>Commerce</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery-1.5.2", "rails", "highcharts" %>
  <%= csrf_meta_tag %>

</head>
<body>

	<p class="notice">
		<%= notice %>
	</p>

	<p class="alert">
		<%= alert %>
	</p>

  <div id='body_container'>
		
		<div class="header">
			<% if user_signed_in? %>
				Welcome <%= current_user.name %>, not you? 
								<%= link_to 'Logout', destroy_user_session_path %> |
								<%= link_to 'View Orders', orders_path %> |
								<%= link_to 'Home', root_path %>
			<% else %>
				<%= link_to "Sign in", new_user_session_path %> |
				<%= link_to "Sign up", new_user_registration_path %>
			<% end %>
		</div>

    <%= yield %>
  </div>
</body>
</html>
