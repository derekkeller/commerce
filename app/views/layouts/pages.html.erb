<!DOCTYPE html>

<html>
<head>

  <title>Commerce</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery-1.5.2", "rails", "highcharts" %>
  <%= csrf_meta_tag %>
</head>

<body>

	<p class="notice">
		<%= notice %>
	</p>

	<p class="alert">
		<%= alert %>
	</p>

  <div id='body_container'>

		<% if user_signed_in? %>
			Welcome <%= current_user.name %>, not you?
							<%= link_to "sign out", destroy_user_session_path %> |
							<%= link_to "View Orders", 'orders' %> |
							<%= link_to "Home", root_path %>
		<% end %>

    <%= yield %>
  </div>

</body>
</html>